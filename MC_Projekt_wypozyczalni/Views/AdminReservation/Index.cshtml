@model IEnumerable<Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewData["id"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.reservationStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reservationEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vehicleID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.reservationStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reservationEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vehicleID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                <a asp-action="ChangeStatus" asp-route-id="@item.Id">Change status</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
