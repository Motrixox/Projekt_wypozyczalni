@model Reservation

@{
    ViewData["Title"] = "ChangeStatus";
}

<h1>ChangeStatus</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeStatus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="reservationStart" class="control-label"></label>
                <input asp-for="reservationStart" class="form-control" disabled/>
                <span asp-validation-for="reservationStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reservationEnd" class="control-label"></label>
                <input asp-for="reservationEnd" class="form-control" disabled />
                <span asp-validation-for="reservationEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vehicleID" class="control-label"></label>
                <input asp-for="vehicleID" class="form-control" disabled />
                <span asp-validation-for="vehicleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userName" class="control-label"></label>
                <input asp-for="userName" class="form-control" disabled />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <select asp-for="status" name="status" id="status">
                    <option value="Reserved">Reserved</option>
                    <option value="Rented">Rented</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
